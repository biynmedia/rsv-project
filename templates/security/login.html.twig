{% extends "front_layout.html.twig" %}

{% block title %}Connexion{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-8 mx-auto">
                <h3>Connexion</h3>
                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Aperiam asperiores cum cupiditate deserunt dolor enim eos ipsum iure modi nam? Aspernatur culpa deleniti eveniet excepturi maxime mollitia neque obcaecati placeat?</p>

                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% for message in app.flashes('notice') %}
                    <div class="alert alert-success  alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                {% endfor %}

                {{ form(form) }}

            </div>
        </div>
    </div>
{% endblock %}

