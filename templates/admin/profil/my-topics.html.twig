{% extends "admin_layout.html.twig" %}

{% block page_title %}
    Mes Sujets
{% endblock %}

{% block breabcrumb_page %}
    Mes Sujets
{% endblock %}

{% block breabcrumb_item %}
    <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">Dashboard</a></li>
    <li class="breadcrumb-item"><a href="#">Profil</a></li>
    <li class="breadcrumb-item active">Mes sujets</li>
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-12 mx-auto">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Mes Sujets</h4>
                        <h6 class="card-subtitle">Mes propositions de sujets.</h6>
                        {% for message in app.flashes('notice') %}
                            <div class="alert alert-success">
                                {{ message }}
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                                            aria-hidden="true">×</span></button>
                            </div>
                        {% endfor %}
                        <div class="table-responsive m-t-40">
                            <table id="topicsTable" class="table table-bordered table-striped">
                                <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Nom</th>
                                    <th>Categorie</th>
                                    <th>Proposé par</th>
                                    <th>Date</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for topic in topics %}
                                    <tr>
                                        <td>{{ topic.id }}</td>
                                        <td>{{ topic.name }}</td>
                                        <td>{{ topic.category.name }}</td>
                                        <td>{{ topic.user.firstname ~ ' ' ~ topic.user.lastname }}</td>
                                        <td>{{ topic.writingDate | date('d/m/Y') }}</td>
                                        <td>{{ topic.status }}</td>
                                        <td>
                                            <a href="{{ path('admin_topic', { 'id' : topic.id, 'alias' : topic.alias }) }}" data-toggle="tooltip" title="Consulter" class="btn btn-primary"><i class="fas fa-eye"></i></a>
                                            {% if (topic.status != 'published' and topic.user.id == app.user.id) or is_granted('ROLE_ADMIN') %}
                                                <a href="{{ path('topic_edit', { 'id' : topic.id }) }}" data-toggle="tooltip" title="Editer" class="btn btn-warning"><i class="fas fa-edit"></i></a>
                                            {% endif %}

                                            {% if is_granted('ROLE_ADMIN') %}
                                                <a href="#" data-toggle="tooltip" title="Dépublier" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block final_stylesheets %}
    {{ encore_entry_link_tags('datatable') }}
{% endblock %}

{% block final_javascripts %}
    {{ encore_entry_script_tags('datatable') }}
{% endblock %}